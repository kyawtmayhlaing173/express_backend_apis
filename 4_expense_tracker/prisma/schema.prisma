generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Expense {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  description String
  amount      Float
  notes       String?
  category    Category
  createdAt   DateTime @default(now())
}

enum Category {
  Leisure
  Electronics
  Utilities
  Clothing
  Health
  Others
}
